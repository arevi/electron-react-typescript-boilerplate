{
  "name": "electron-react-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A minimal template for creating electron applications using the react framework along with TypeScript.",
  "main": "./src/main/index.ts",
  "scripts": {
    "webpack-dev": "webpack --mode development",
    "react-dev": "webpack-dev-server --mode development --port 3000",
    "electron-dev": "cross-env ELECTRON_ENV=dev electron ./build/app.js",
    "webpack-prod": "webpack --mode production",
    "build-win": "electron-builder build --win -c.extraMetadata.main=./build/app.js --publish never"
  },
  "author": "Armin Dizdarevic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arevi/electron-react-typescript-boilerplate"
  },
  "build": {
    "appId": "com.arevi.electron-react-typescript-boilerplate",
    "files": [
      "build/*",
      "node_modules/**/*"
    ],
    "productName": "Electron React TypeScript Boilerplate"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/node": "^14.6.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.12",
    "@types/webpack-dev-server": "^3.10.1",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "electron": "^9.0.3",
    "electron-builder": "^22.7.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "prop-types": "^15.7.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}